            "id": "AOAI.27",
            "link": "https://learn.microsoft.com/azure/architecture/ai-ml/architecture/baseline-openai-e2e-chat#azure-openai---reliability",
            "service": "Azure OpenAI",
            "severity": "低い",
            "subcategory": "マルチリージョン アーキテクチャ",
